<% content_for :title, "Maisons d’édition" %>

<div class="container py-5" style="margin-top: 100px;">

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
  <% end %>

  <!-- Titre + bouton -->
  <div class="d-flex align-items-center mb-4">
    <h2 class="text-black fw-bold text-uppercase mb-0 me-3">Maisons d’édition</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
    <%= link_to "Ajouter une maison", new_publishing_house_path, class: "btn btn-dark rounded-pill px-4 py-2 ms-3 fw-semibold" %>
  </div>

  <!-- Liste des maisons -->
  <% if @publishing_houses.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @publishing_houses.each do |house| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-4">
            <div class="card-body d-flex flex-column">
              <h5 class="fw-bold mb-2"><%= house.name %></h5>
              <p class="text-muted small flex-grow-1"><%= truncate(house.description, length: 120) %></p>

              <%= link_to "Voir la maison", publishing_house_path(house), class: "btn btn-outline-dark btn-sm rounded-pill mt-2" %>
            </div>
            <div class="card-footer bg-light text-muted small rounded-bottom-4">
              Créé par <%= link_to house.user.username, user_path(house.user), class: "text-decoration-none text-dark" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted fst-italic">Aucune maison d’édition n’a encore été ajoutée.</p>
  <% end %>
</div>
