<% content_for :title, "Modifier maison d’édition" %>

<div class="container py-5 mt-5">
  <h1 class="text-center mb-4 fw-bold" style="color: #5e4636;">Modifier la maison d’édition</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @publishing_house, local: true, class: "bg-white p-4 rounded shadow-sm" do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Nom", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label" %>
          <%= form.text_area :description, rows: 5, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :logo, "Logo (facultatif)", class: "form-label" %>
          <%= form.file_field :logo, class: "form-control" %>

          <% if @publishing_house.logo.attached? %>
            <div class="mt-3">
              <%= image_tag @publishing_house.logo.variant(resize_to_limit: [200, 200]), class: "img-thumbnail" %>
            </div>
          <% end %>
        </div>

        <div class="d-grid">
          <%= form.submit "Mettre à jour", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "← Retour", publishing_house_path(@publishing_house), class: "text-decoration-none text-secondary" %>
      </div>
    </div>
  </div>
</div>
