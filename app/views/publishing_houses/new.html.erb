<% content_for :title, "Nouvelle maison d’édition" %>

<div class="container py-5 mt-5">
  <h1 class="text-center mb-4 fw-bold" style="color: #5e4636;">Créer une maison d’édition</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @publishing_house, local: true, class: "bg-white p-4 rounded shadow-sm" do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Nom", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label" %>
          <%= form.text_area :description, rows: 5, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :logo, "Logo", class: "form-label" %>
          <%= form.file_field :logo, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Créer la maison d’édition", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "← Retour", publishing_houses_path, class: "text-decoration-none text-secondary" %>
      </div>
    </div>
  </div>
</div>
