<!-- HERO SECTION WITH SEARCH -->
<section class="bg-light py-5 text-center position-relative overflow-hidden" style="margin-top: 100px;">
  <div class="container py-5">
    <h1 class="homepage-title">
      DÉCOUVREZ&nbsp;PARTAGEZ <br>
      CÉLÉBREZ&nbsp;LA&nbsp;LITTÉRATURE
    </h1>

    <p class="text-muted fw-normal mb-4"
       style="max-width: 780px; margin: 0 auto; font-size: clamp(1rem, 2.5vw, 1.35rem); line-height: 1.8; color: #4a4a4a;">
      <strong>Readnest</strong> est le lieu où les <strong>lecteur·ice·s</strong>,
      les <strong>libraires</strong> et les <strong>maisons d’édition</strong> se retrouvent pour
      partager leurs découvertes, publier des chroniques inspirantes et célébrer ensemble la passion du livre.
    </p>

    <div class="d-flex justify-content-center mt-4">
      <%= form_with url: search_path, method: :get, local: true, class: "d-flex w-100 w-md-75 w-lg-50" do |form| %>
        <%= form.text_field :query, value: params[:query],
              placeholder: "Rechercher une chronique, un·e lecteur·ice, une librairie ou une maison d’édition...",
              class: "form-control form-control-lg rounded-start-pill shadow-sm border-dark",
              aria: { label: "Rechercher sur Readnest" } %>
        <%= form.submit "Rechercher", class: "btn btn-outline-dark btn-lg rounded-end-pill px-4 shadow-sm" %>
      <% end %>
    </div>

    <div class="mt-4">
      <%= link_to "Commencer à écrire", new_chronicle_path,
          class: "btn btn-dark btn-lg rounded-pill px-4 shadow-sm text-uppercase" %>
    </div>
  </div>
</section>

<!-- DERNIÈRES CHRONIQUES -->
<section class="container py-5">
  <div class="d-flex align-items-center mb-4">
    <h2 class="text-black fw-bold text-uppercase mb-0 me-3">Dernières chroniques</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
  </div>

  <% if @chronicles.empty? %>
    <p class="text-muted text-center">Aucune chronique trouvée.</p>
  <% else %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <% @chronicles.each do |chronicle| %>
        <div class="col">
          <div class="card-uniform">
            <%= image_tag(chronicle.photo.attached? ? chronicle.photo : "livre.jpeg") %>
            <div class="card-overlay">
              <h5 class="fw-bold text-white mb-2"><%= truncate(chronicle.title, length: 55) %></h5>
              <p class="text-white small mb-0">
                <% if chronicle.user.is_publishing_house? && chronicle.user.publishing_house.present? %>
                  <%= chronicle.user.publishing_house.name %>
                <% else %>
                  <%= chronicle.user.username %>
                <% end %>
              </p>
              <p class="text-white-50 small mb-0"><%= chronicle.created_at.strftime("%d %b %Y") %></p>
            </div>
            <%= link_to chronicle_path(chronicle), class: "stretched-link", "aria-label": "Voir la chronique #{chronicle.title}" do %><% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Voir toutes les chroniques", chronicles_path, class: "btn btn-dark rounded-pill px-4" %>
    </div>
  <% end %>
</section>

<!-- AUTEUR·RICE·S À DÉCOUVRIR -->
<section class="container py-5">
  <div class="d-flex align-items-center mb-5">
    <h2 class="fw-bold text-uppercase mb-0 me-3 text-black">Auteur·rice·s à découvrir</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
  </div>

  <% if @authors &&
        @authors.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <% @authors.each do |author| %>
        <div class="col">
          <div class="card-uniform">
            <%= image_tag(author.avatar.attached? ? author.avatar : "default_avatar.png") %>
            <div class="card-overlay">
              <h5 class="fw-bold text-white mb-1"><%= author.username %></h5>
              <% if author.bio.present? %>
                <p class="text-white-50 small mb-0"><%= truncate(author.bio, length: 90) %></p>
              <% end %>
            </div>
            <%= link_to user_path(author), class: "stretched-link", "aria-label": "Voir le profil de #{author.username}" do %><% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Voir tous les auteur·rice·s", authors_path, class: "btn btn-dark rounded-pill px-4 py-2" %>
    </div>
  <% else %>
    <p class="text-muted text-center">Aucun·e auteur·rice à afficher pour le moment.</p>
  <% end %>
</section>

<!-- MAISONS D'ÉDITION -->
<section class="container py-5">
  <div class="d-flex align-items-center mb-5">
    <h2 class="fw-bold text-uppercase mb-0 me-3 text-black">Maisons d’édition à découvrir</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
  </div>

  <% if @publishing_houses.empty? %>
    <p class="text-muted text-center">Aucune maison d’édition à afficher pour le moment.</p>
  <% else %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <% @publishing_houses.each do |house| %>
        <div class="col">
          <div class="card-uniform">
            <%= image_tag(house.logo.attached? ? house.logo : "maison.jpeg") %>
            <div class="card-overlay">
              <h5 class="fw-bold text-white mb-2"><%= house.name %></h5>
              <p class="text-white-50 small mb-0"><%= truncate(house.description, length: 90) %></p>
            </div>
            <%= link_to publishing_house_path(house), class: "stretched-link", "aria-label": "Voir #{house.name}" do %><% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Voir toutes les maisons", publishing_houses_path, class: "btn btn-dark rounded-pill px-4 py-2" %>
    </div>
  <% end %>
</section>

<!-- LIBRAIRIES -->
<section class="container py-5">
  <div class="d-flex align-items-center mb-5">
    <h2 class="fw-bold text-uppercase mb-0 me-3 text-black">Toutes les librairies</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
  </div>

  <% if @bookshops.empty? %>
    <p class="text-muted text-center">Aucune librairie à afficher pour le moment.</p>
  <% else %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <% @bookshops.each do |bookshop| %>
        <div class="col">
          <div class="card-uniform">
            <%= image_tag bookshop.logo_url %>
            <div class="card-overlay">
              <h5 class="fw-bold text-white mb-2"><%= bookshop.name %></h5>
              <% if bookshop.description.present? %>
                <p class="text-white-50 small mb-0"><%= truncate(bookshop.description, length: 90) %></p>
              <% end %>
            </div>
            <%= link_to bookshop_path(bookshop), class: "stretched-link", "aria-label": "Voir #{bookshop.name}" do %><% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Voir toutes les librairies", bookshops_path, class: "btn btn-dark rounded-pill px-4 py-2" %>
    </div>
  <% end %>
</section>

<!-- LIBRAIRIES À PROXIMITÉ -->
<section class="container py-5" style="margin-top: 80px;">
  <div class="d-flex align-items-center mb-4">
    <h2 class="fw-bold text-uppercase mb-0 me-3 text-dark">Librairies à proximité</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #000;"></div>
  </div>

  <div class="row align-items-center mb-4">
    <div class="col-md-8">
      <p class="lead text-muted mb-3">
        Que vous soyez en quête d’une perle rare ou d’un coup de cœur inattendu, les librairies autour de vous regorgent de trésors à découvrir.
        Plongez dans l’univers des livres et soutenez les librairies indépendantes près de chez vous.
      </p>
    </div>
    <div class="col-md-4 text-md-end text-center">
      <%= link_to "Voir les librairies autour de vous", map_bookshops_path, class: "btn btn-dark rounded-pill px-4 py-2 fw-semibold" %>
    </div>
  </div>
</section>

