<% content_for :title, "Librairies" %>

<section class="container py-5" style="margin-top: 100px;">
  <!-- Titre + ligne -->
  <div class="d-flex align-items-center mb-5">
    <h2 class="fw-bold text-uppercase mb-0 me-3 text-black">Librairies</h2>
    <div class="flex-grow-1" style="height: 1px; background-color: #ccc;"></div>
  </div>

  <% if @bookshops.empty? %>
    <p class="text-muted text-center">Aucune librairie inscrite pour le moment.</p>
  <% else %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">

      <% @bookshops.each do |bookshop| %>
        <div class="col">
          <div class="card-uniform">

            <!-- Image avec fallback (avatar user > logo > image par dÃ©faut) -->
            <% if bookshop.user&.avatar&.attached? %>
              <%= image_tag bookshop.user.avatar, alt: bookshop.name %>
            <% elsif bookshop.logo.attached? %>
              <%= image_tag bookshop.logo, alt: bookshop.name %>
            <% else %>
              <%= image_tag "default_avatar.png", alt: bookshop.name %>
            <% end %>

            <!-- Overlay -->
            <div class="card-overlay">
              <h5 class="fw-bold text-white mb-1"><%= bookshop.name %></h5>
              <% if bookshop.description.present? %>
                <p class="text-white-50 small mb-0">
                  <%= truncate(bookshop.description, length: 90) %>
                </p>
              <% end %>
            </div>

            <!-- Lien cliquable sur toute la carte -->
            <%= link_to bookshop_path(bookshop),
                        class: "stretched-link",
                        "aria-label": "Voir la librairie #{bookshop.name}" do %><% end %>
          </div>
        </div>
      <% end %>

    </div>
  <% end %>
</section>

