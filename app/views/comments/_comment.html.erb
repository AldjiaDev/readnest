
<div class="d-flex align-items-center gap-3 mt-2">

  <!-- Supprimer (si autorisé) -->
  <%= link_to "Supprimer", comment_path(comment),
      method: :delete,
      data: { turbo_confirm: "Es-tu sûr de vouloir supprimer ce commentaire ?" },
      class: "btn btn-sm btn-outline-danger rounded-pill px-3" %>

  <!-- Signaler -->
  <% unless comment.reported? %>
    <%= link_to "Signaler", report_comment_path(comment),
        method: :patch,
        class: "btn btn-sm btn-outline-warning rounded-pill px-3",
        data: { turbo_method: :patch, turbo_confirm: "Signaler ce commentaire comme inapproprié ?" } %>
  <% else %>
    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">Commentaire signalé</span>
  <% end %>

</div>
