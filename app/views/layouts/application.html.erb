    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

     <%= javascript_importmap_tags %>

     <script nonce="<%= content_security_policy_nonce %>">
        // Envoi d'un "page_view" dans la dataLayer au chargement et à chaque navigation Turbo
        function pushGtmPageView(){
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            event: 'page_view',
            page_location: location.href,
            page_path: location.pathname + location.search,
            page_title: document.title
          });
        }

        // 1) chargement initial
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', pushGtmPageView, { once: true });
        } else {
          pushGtmPageView();
        }
        // 2) navigation Turbo
        document.addEventListener('turbo:load', pushGtmPageView);
      </script>

     <script type="module">
        import * as bootstrap from "bootstrap"

        // Réactive les dropdowns après chaque chargement Turbo
        document.addEventListener("turbo:load", () => {
          const dropdownTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
          dropdownTriggerList.map(el => new bootstrap.Dropdown(el))
        })
      </script>
  </body>
</html>

