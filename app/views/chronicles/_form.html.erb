<%= form_with(model: chronicle, local: true, multipart: true, class: "space-y-6") do |form| %>
  <% if chronicle.errors.any? %>
    <div class="bg-red-100 border border-red-300 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2">
        <%= pluralize(chronicle.errors.count, "error") %> prohibited this chronicle from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% chronicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :content, class: "block font-medium text-gray-700" %>
    <%= form.text_area :content, rows: 6, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :photo, class: "block font-medium text-gray-700" %>
    <%= form.file_field :photo, class: "mt-1" %>
  </div>

  <div>
    <%= form.submit "Publish Chronicle", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
