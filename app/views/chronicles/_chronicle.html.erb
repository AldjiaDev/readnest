<div id="<%= dom_id chronicle %>" class="p-3 border rounded shadow-sm bg-light mb-3">
  <p class="mb-1 text-muted small">
    <%= chronicle.created_at.strftime("%d %b %Y") %> · par <strong><%= chronicle.user.username %></strong>
  </p>

  <h5 class="fw-bold mb-2"><%= chronicle.title %></h5>

  <p class="mb-2"><%= truncate(strip_tags(chronicle.content), length: 150) %></p>

  <% if chronicle.book_title.present? || chronicle.author.present? || chronicle.publisher.present? %>
    <ul class="list-unstyled small text-muted mb-2">
      <% if chronicle.book_title.present? %>
        <li><strong>Livre :</strong> <%= chronicle.book_title %></li>
      <% end %>
      <% if chronicle.author.present? %>
        <li><strong>Auteur·e :</strong> <%= chronicle.author %></li>
      <% end %>
      <% if chronicle.publisher.present? %>
        <li><strong>Éditeur :</strong> <%= chronicle.publisher %></li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "Voir la chronique", chronicle_path(chronicle), class: "btn btn-outline-primary btn-sm" %>
</div>
