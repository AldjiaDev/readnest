<% content_for :title, @chronicle.title %>

<div class="container py-5 mt-4">
  <!-- Titre de la chronique -->
  <h1 class="text-center mb-4 fw-bold" style="color: #5e4636;"><%= @chronicle.title %></h1>

  <!-- Image de la chronique -->
  <% if @chronicle.photo.attached? %>
    <div class="text-center mb-5">
      <%= image_tag @chronicle.photo, class: "img-fluid rounded shadow-sm", style: "max-height: 400px; object-fit: cover;" %>
    </div>
  <% end %>

  <!-- Informations sur le livre et l'auteur -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-8 text-center text-secondary">
      <p class="mb-2"><strong>Auteur·e :</strong> <%= @chronicle.author.presence || "Non renseigné" %></p>
      <p class="mb-2"><strong>Titre du livre :</strong> <%= @chronicle.book_title.presence || "Non renseigné" %></p>
      <p class="mb-2"><strong>Maison d’édition :</strong> <%= @chronicle.publisher.presence || "Non renseignée" %></p>
      <p class="mb-0"><strong>Chronique publiée par :</strong> <%= @chronicle.user.username %></p>
    </div>
  </div>

  <!-- Contenu de la chronique -->
  <div class="bg-white p-4 rounded shadow-sm" style="line-height: 1.8; font-size: 1.1rem;">
    <%= simple_format(@chronicle.content) %>
  </div>

  <!-- Bouton retour -->
  <div class="text-center mt-5">
    <%= link_to "← Retour aux chroniques", chronicles_path, class: "btn btn-outline-secondary px-4 py-2" %>
  </div>
</div>
