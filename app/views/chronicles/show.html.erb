<% content_for :title, @chronicle.title %>
<% content_for :meta_description, @chronicle.summary.presence || @chronicle.content.to_s.truncate(160) %>

<div class="container py-5" style="margin-top: 100px; max-width: 800px;">

  <!-- TAGS + DATE -->
  <div class="mb-3 text-muted small d-flex gap-2 flex-wrap">
    <span class="badge bg-light border text-dark">LittÃ©rature</span>
    <span class="badge bg-light border text-dark">Chronique</span>
    <span><%= l(@chronicle.created_at.to_date, format: :long) %> Â· 3 min de lecture</span>
  </div>

  <!-- TITRE -->
  <h1 class="fw-bold mb-3 text-black display-5"><%= @chronicle.title %></h1>

  <!-- SOUS-TITRE / CHAPÃ” -->
  <% if @chronicle.summary.present? %>
    <p class="lead mb-4 text-secondary fst-italic"><%= @chronicle.summary %></p>
  <% end %>

  <!-- IMAGE PRINCIPALE -->
  <% if @chronicle.photo.attached? %>
    <figure class="mb-4">
      <%= image_tag @chronicle.photo, class: "img-fluid rounded-4 shadow-sm w-100", style: "object-fit: cover;" %>
      <figcaption class="text-muted small mt-2">
        <%= @chronicle.caption.presence || "Image fournie par lâ€™auteur" %>
      </figcaption>
    </figure>
  <% end %>

  <!-- AUTEUR -->
  <div class="d-flex align-items-center mb-5 gap-3 border-bottom pb-3">
    <% if @chronicle.user.avatar.attached? %>
      <%= image_tag url_for(@chronicle.user.avatar), class: "rounded-circle border", style: "width: 55px; height: 55px; object-fit: cover;" %>
    <% else %>
      <%= image_tag "default_avatar.png", class: "rounded-circle border", style: "width: 55px; height: 55px; object-fit: cover;" %>
    <% end %>

    <div>
      <strong>
        <%= link_to @chronicle.user.username, user_path(@chronicle.user), class: "text-decoration-none text-dark" %>
      </strong><br>
      <span class="text-muted small">Auteur</span>
    </div>
  </div>

  <!-- TABLE DES MATIÃˆRES -->
  <% if @chronicle.table_of_contents.present? %>
    <div class="bg-light border rounded-3 p-3 mb-4">
      <h6 class="fw-bold mb-2">ðŸ—‚ Table des matiÃ¨res</h6>
      <ul class="list-unstyled small mb-0">
        <% @chronicle.table_of_contents.each do |item| %>
          <li>â€¢ <%= item %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- CONTENU PRINCIPAL -->
  <article class="mb-5" style="line-height: 1.9; font-size: 1.15rem; text-align: justify;">
    <%= simple_format(@chronicle.content) %>
  </article>

    <!-- INTERACTIONS : J'AIME + FAVORI + PARTAGE SOCIAL -->
  <div class="d-flex justify-content-between align-items-center mb-5">

    <div class="d-flex align-items-center gap-3">
      <!-- J'AIME -->
      <%= render "chronicles/like_button", chronicle: @chronicle %>

      <!-- FAVORI -->
      <% if user_signed_in? %>
        <% if current_user.favorites.exists?(chronicle: @chronicle) %>
          <%= button_to favorite_path(current_user.favorites.find_by(chronicle: @chronicle)),
                        method: :delete,
                        class: "btn btn-outline-warning btn-sm rounded-pill px-3 fw-semibold" do %>
            â˜… Retirer des favoris
          <% end %>
        <% else %>
          <%= button_to favorites_path(chronicle_id: @chronicle.id),
                        method: :post,
                        class: "btn btn-outline-dark btn-sm rounded-pill px-3 fw-semibold" do %>
            â˜† Ajouter aux favoris
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- PARTAGE SOCIAL -->
    <div class="d-flex gap-2">
      <!-- Twitter/X -->
      <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= @chronicle.title %>"
        target="_blank" class="btn btn-sm btn-outline-dark rounded-circle d-flex align-items-center justify-content-center"
        style="width: 38px; height: 38px;">
        <i class="bi bi-twitter-x"></i>
      </a>

      <!-- LinkedIn -->
      <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= request.original_url %>"
        target="_blank" class="btn btn-sm btn-outline-dark rounded-circle d-flex align-items-center justify-content-center"
        style="width: 38px; height: 38px;">
        <i class="bi bi-linkedin"></i>
      </a>

      <!-- Facebook -->
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>"
        target="_blank" class="btn btn-sm btn-outline-dark rounded-circle d-flex align-items-center justify-content-center"
        style="width: 38px; height: 38px;">
        <i class="bi bi-facebook"></i>
      </a>
    </div>
  </div>

  <!-- COMMENTAIRES -->
  <div class="mt-5">
    <h4 class="mb-4 fw-bold border-bottom pb-2">Commentaires</h4>

    <% @chronicle.comments.where(parent_id: nil).order(created_at: :desc).each do |comment| %>
      <div class="mb-4 p-3 border rounded bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <strong><%= comment.user.username %></strong>
            <small class="text-muted">Â· il y a <%= time_ago_in_words(comment.created_at) %></small>
          </div>

          <% if user_signed_in? %>
            <button class="btn btn-outline-dark btn-sm rounded-pill px-3"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#reply-form-<%= comment.id %>">
              RÃ©pondre
            </button>
          <% end %>
        </div>

        <p class="mt-2 mb-2"><%= comment.content %></p>

        <!-- Formulaire de rÃ©ponse -->
        <div class="collapse mt-2" id="reply-form-<%= comment.id %>">
          <%= form_with model: [@chronicle, Comment.new], local: true do |f| %>
            <%= f.hidden_field :parent_id, value: comment.id %>
            <div class="mb-2">
              <%= f.text_area :content, placeholder: "Votre rÃ©ponse...", rows: 2, class: "form-control" %>
            </div>
            <div class="text-end">
              <%= f.submit "RÃ©pondre", class: "btn btn-dark btn-sm rounded-pill px-3" %>
            </div>
          <% end %>
        </div>

        <!-- RÃ©ponses -->
        <% if comment.replies.any? %>
          <div class="mt-3 ms-4">
            <% comment.replies.order(created_at: :asc).each do |reply| %>
              <div class="mb-2 p-2 border rounded bg-white">
                <strong><%= reply.user.username %></strong>
                <small class="text-muted">Â· il y a <%= time_ago_in_words(reply.created_at) %></small>
                <p class="mb-1"><%= reply.content %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <h5 class="mt-4">Ajouter un commentaire</h5>
      <%= form_with model: [@chronicle, Comment.new], local: true do |f| %>
        <div class="mb-2">
          <%= f.text_area :content, placeholder: "Votre commentaire...", rows: 3, class: "form-control" %>
        </div>
        <div class="text-end">
          <%= f.submit "Commenter", class: "btn btn-dark rounded-pill px-3" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted">Connectez-vous pour commenter cette chronique.</p>
    <% end %>
  </div>

<!-- RETOUR + ACTIONS -->
  <div class="text-center mt-5 d-flex justify-content-center gap-2 flex-wrap">

    <!-- Retour -->
    <%= link_to "Retour aux chroniques",
        chronicles_path,
        class: "btn btn-outline-dark rounded-pill px-4 py-2 fw-semibold" %>

    <!-- Actions pour lâ€™auteur -->
    <% if current_user == @chronicle.user %>
      <%= link_to "Modifier",
          edit_chronicle_path(@chronicle),
          class: "btn btn-secondary rounded-pill px-4 py-2 fw-semibold text-white" %>

      <%= button_to "Supprimer",
          chronicle_path(@chronicle),
          method: :delete,
          data: { confirm: "Supprimer dÃ©finitivement cette chronique ?" },
          class: "btn btn-danger rounded-pill px-4 py-2 fw-semibold text-white" %>
    <% end %>
  </div>
