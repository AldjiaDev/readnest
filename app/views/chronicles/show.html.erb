<div class="max-w-3xl mx-auto py-10 px-4">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @chronicle.title %></h1>
    <p class="text-sm text-gray-500">By <%= @chronicle.user.username %></p>
  </div>

  <% if @chronicle.photo.attached? %>
    <div class="mb-6">
      <%= image_tag @chronicle.photo.variant(resize_to_limit: [800, 500]), class: "rounded shadow" %>
    </div>
  <% end %>

  <div class="prose max-w-none text-gray-700 mb-8">
    <%= simple_format(@chronicle.content) %>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit", edit_chronicle_path(@chronicle), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 text-sm" %>
    <%= link_to "Back", chronicles_path, class: "text-blue-600 hover:underline text-sm" %>
  </div>
</div>
