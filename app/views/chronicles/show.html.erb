<% content_for :title, @chronicle.title %>

<div class="container py-5 mt-4">
  <!-- Titre -->
  <h1 class="text-center mb-4 fw-bold" style="color: #5e4636;">
    <%= @chronicle.title %>
  </h1>

  <!-- Image -->
  <% if @chronicle.photo.attached? %>
    <div class="d-flex justify-content-center mb-5">
      <div class="shadow-sm rounded overflow-hidden" style="aspect-ratio: 2 / 3; max-height: 450px;">
        <%= image_tag @chronicle.photo, class: "img-fluid h-100", style: "object-fit: cover;" %>
      </div>
    </div>
  <% end %>

  <!-- Infos livre et auteur -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-8 text-center text-muted small">
      <% if @chronicle.book_title.present? %>
        <p><strong>Livre :</strong> <%= @chronicle.book_title %></p>
      <% end %>
      <% if @chronicle.author.present? %>
        <p><strong>Auteur¬∑e :</strong> <%= @chronicle.author %></p>
      <% end %>
      <% if @chronicle.publisher.present? %>
        <p><strong>Maison d‚Äô√©dition :</strong> <%= @chronicle.publisher %></p>
      <% end %>
      <p>
        <strong>Publi√© par :</strong>
        <%= link_to @chronicle.user.username, user_path(@chronicle.user), class: "text-decoration-none" %>
      </p>
    </div>
  </div>

  <!-- Contenu de la chronique -->
  <div class="bg-white p-4 rounded shadow-sm mb-5" style="line-height: 1.8; font-size: 1.1rem;">
    <%= simple_format(@chronicle.content) %>
  </div>

  <!-- Likes -->
  <div class="d-flex align-items-center gap-3 mb-5 justify-content-center">
    <% if user_signed_in? %>
      <% if @chronicle.likes.exists?(user: current_user) %>
        <%= button_to chronicle_like_path(@chronicle), method: :delete, class: "btn btn-sm btn-outline-danger" do %>
          ‚ù§Ô∏è Retirer
        <% end %>
      <% else %>
        <%= button_to chronicle_like_path(@chronicle), method: :post, class: "btn btn-sm btn-outline-primary" do %>
          ü§ç J‚Äôaime
        <% end %>
      <% end %>
    <% else %>
      <p class="text-muted small mb-0">Connectez-vous pour aimer cette chronique</p>
    <% end %>
    <span class="text-muted small"><%= pluralize(@chronicle.likes.count, "like") %></span>
  </div>

  <!-- Commentaires -->
  <div class="mt-5">
    <h3 class="mb-4">Commentaires</h3>

    <% @chronicle.comments.where(parent_id: nil).order(created_at: :desc).each do |comment| %>
      <div class="mb-4 p-3 border rounded bg-light">
        <strong><%= comment.user.username %></strong>
        <small class="text-muted">¬∑ <%= time_ago_in_words(comment.created_at) %> ago</small>
        <p class="mb-2"><%= comment.content %></p>

        <!-- Likes du commentaire -->
        <div class="d-flex align-items-center gap-2 mb-2">
          <% if user_signed_in? %>
            <% if comment.comment_likes.exists?(user: current_user) %>
              <%= button_to comment_comment_like_path(comment), method: :delete, class: "btn btn-sm btn-outline-danger px-2 py-1" do %>
                ‚ù§Ô∏è Retirer
              <% end %>
            <% else %>
              <%= button_to comment_comment_like_path(comment), method: :post, class: "btn btn-sm btn-outline-primary px-2 py-1" do %>
                ü§ç J‚Äôaime
              <% end %>
            <% end %>
          <% else %>
            <span class="text-muted small">Connectez-vous pour aimer</span>
          <% end %>
          <span class="text-muted small"><%= pluralize(comment.comment_likes.count, "like") %></span>
        </div>

        <!-- R√©ponses -->
        <% comment.replies.each do |reply| %>
          <div class="ms-4 mt-2 ps-3 border-start">
            <strong><%= reply.user.username %></strong>
            <small class="text-muted">¬∑ <%= time_ago_in_words(reply.created_at) %> ago</small>
            <p class="mb-2"><%= reply.content %></p>
          </div>
        <% end %>

        <!-- Formulaire de r√©ponse -->
        <% if user_signed_in? %>
          <%= form_with model: [comment.chronicle, Comment.new], local: true do |f| %>
            <%= f.hidden_field :parent_id, value: comment.id %>
            <div class="mb-2">
              <%= f.text_area :content, placeholder: "R√©pondre √† ce commentaire...", rows: 2, class: "form-control" %>
            </div>
            <%= f.submit "R√©pondre", class: "btn btn-sm btn-outline-primary" %>
          <% end %>
        <% end %>

        <!-- Supprimer -->
        <% if comment.user == current_user || @chronicle.user == current_user %>
          <%= button_to "Supprimer", chronicle_comment_path(@chronicle, comment), method: :delete, data: { confirm: "Confirmer la suppression ?" }, class: "btn btn-sm btn-outline-danger mt-2" %>
        <% end %>
      </div>
    <% end %>

    <!-- Ajouter un commentaire -->
    <% if user_signed_in? %>
      <div class="mt-4">
        <h5>Ajouter un commentaire</h5>
        <%= form_with model: [@chronicle, Comment.new], local: true do |f| %>
          <div class="mb-2">
            <%= f.text_area :content, placeholder: "Votre commentaire...", rows: 3, class: "form-control" %>
          </div>
          <%= f.submit "Commenter", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted">Connectez-vous pour commenter cette chronique.</p>
    <% end %>
  </div>

  <!-- Retour -->
  <div class="text-center mt-5">
    <%= link_to "‚Üê Retour aux chroniques", chronicles_path, class: "btn btn-outline-secondary px-4 py-2" %>
  </div>
</div>
