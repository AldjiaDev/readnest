<% content_for :title, "Modifier mon profil" %>

<div class="container py-5">
  <h1 class="text-center mb-4 fw-bold" style="color: #5e4636;">Modifier mon profil</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <div class="mb-3">
          <%= f.label :username, "Nom d'utilisateur", class: "form-label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Adresse email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :bio, "À propos de moi", class: "form-label" %>
          <%= f.text_area :bio, rows: 4, class: "form-control", placeholder: "Parlez-nous un peu de vous..." %>
        </div>

        <% if resource.respond_to?(:avatar) %>
          <div class="mb-3">
            <%= f.label :avatar, "Photo de profil", class: "form-label" %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="mb-3">
          <%= f.label :current_password, "Mot de passe actuel (obligatoire pour enregistrer les modifications)", class: "form-label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit "Mettre à jour le profil", class: "btn btn-primary px-4" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
