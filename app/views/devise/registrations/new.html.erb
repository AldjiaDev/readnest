<% content_for :title, "Créer un compte" %>

<section class="bg-light py-5" style="margin-top: 100px;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm rounded-4 border-0">
          <div class="card-body p-5">
            <h2 class="fw-bold text-center mb-4">Créer un compte</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <!-- Username -->
              <div class="mb-3">
                <%= f.label :username, "Nom d’utilisateur", class: "form-label fw-semibold" %>
                <%= f.text_field :username, autofocus: true, class: "form-control rounded-pill shadow-sm" %>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label fw-semibold" %>
                <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-pill shadow-sm" %>
              </div>

              <!-- Mot de passe -->
              <div class="mb-3">
                <%= f.label :password, "Mot de passe", class: "form-label fw-semibold" %>
                <% if @minimum_password_length %>
                  <small class="text-muted">(au moins <%= @minimum_password_length %> caractères)</small>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill shadow-sm" %>
              </div>

              <!-- Confirmation du mot de passe -->
              <div class="mb-3">
                <%= f.label :password_confirmation, "Confirmez le mot de passe", class: "form-label fw-semibold" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill shadow-sm" %>
              </div>

              <!-- Maison d’édition -->
              <div class="form-check mb-4">
                <%= f.check_box :is_publishing_house, class: "form-check-input" %>
                <%= f.label :is_publishing_house, "Je suis une maison d’édition", class: "form-check-label fw-semibold" %>
              </div>

              <!-- Bouton -->
              <div class="d-grid">
                <%= f.submit "S’inscrire", class: "btn btn-dark rounded-pill py-2 fw-bold shadow-sm" %>
              </div>
            <% end %>

            <hr class="my-4">

            <p class="text-center mb-0">
              Déjà un compte ?
              <%= link_to "Se connecter", new_session_path(resource_name), class: "fw-semibold text-dark" %>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
