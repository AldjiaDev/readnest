<% content_for :title, "Connexion" %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6 p-4 shadow rounded bg-white">
    <h2 class="text-center mb-4 text-brown fw-bold">Se connecter à Readnest</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Adresse email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
      </div>

      <%= f.submit "Connexion", class: "btn btn-brown w-100" %>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-muted small" %><br>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-brown small" %>
    </div>
  </div>
</div>
